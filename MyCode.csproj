<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="AntlrGrammars\**" />
    <EmbeddedResource Remove="AntlrGrammars\**" />
    <None Remove="AntlrGrammars\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove=".filenesting.json" />
    <None Remove="ANTLRGrammars.dll" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Antlr4.Runtime.Standard" Version="4.12.0" />
    <PackageReference Include="Antlr4BuildTasks" Version="12.2.0" PrivateAssets="all" />
    <PackageReference Include="FCTB" Version="2.16.24" />
    <PackageReference Include="LiteDB" Version="5.0.16" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="ANTLRGrammars">
      <HintPath>ANTLRGrammars.dll</HintPath>
    </Reference>
  </ItemGroup>
</Project>